<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.memo.post.dao.PostDAO">
	
	<select id="selectPostTest" resultType="map">
		SELECT * FROM `post`
	</select>
	
	<insert id="insertPost" parameterType="map">
		INSERT INTO `post`
		(
			`userId`
			,`subject`
			,`content`
			,`imgPath`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			,#{subject}
			,#{content}
			,#{imgPath}
			,NOW()
			,NOW()
		)
	</insert>	
	
	<select id="selectPostsByUserId" parameterType="int" resultType="com.memo.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imgPath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
	</select>
	
	<!-- 수정할 글 가져오기 -->
	<select id="selectPostByPostIdUserId" parameterType="map" resultType="com.memo.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imgPath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
			AND `id` = #{postId}
	</select>
	
	<update id="updatePostByPostIdUserId" parameterType="map">
		UPDATE `post`
		SET
			`subject` = #{subject}
			,`content` = #{content}
			,`updatedAt` = NOW()
			<!-- imgPath가 있을때만 수정한다 -->
			<if test="imgPath != null">
				,`imgPath` = #{imgPath}
			</if>
		WHERE
			`id` = #{postId}
			AND `userId` = #{userId}
	</update>
	
	<delete id="deletePostByPostIdUserId" parameterType="map">
		DELETE
		FROM
			`post`
		WHERE 
			`id` = #{postId}
			AND `userId` = #{userId}
	</delete>
	
</mapper>
